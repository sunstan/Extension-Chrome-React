{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES6",
        "module": "ES2015",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
